<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:background="#8866ff00"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="#000000"
        android:text="手机防盗"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="安全号码"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"/>
        <TextView 
            android:id="@+id/tv_lsotfind_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9554"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#88000000"
        android:layout_marginTop="10dp"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="防盗保护是否开启"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"/>
        <ImageView 
            android:id="@+id/iv_lostfind_lock"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/unlock"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#88000000"
        android:layout_marginTop="10dp"/>
    <TextView 
        android:onClick="reEnterSetup"
        android:clickable="true"
        android:background="@drawable/sharp_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="重新进入设置向导"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            />
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#88000000"
        android:layout_marginTop="10dp"/>
    <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="功能简介"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:background="#44000000"/>

    <TextView 
        style="@style/text_content_style"
        android:text="GPS追踪：#*location*#"
        android:gravity="center_vertical"
        android:drawableLeft="@android:drawable/star_big_on"
       />
    <TextView 
        style="@style/text_content_style"
        android:text="播放报警音乐：#*alarm*#"
        android:drawableLeft="@android:drawable/star_big_on"
       />
    <TextView 
        style="@style/text_content_style"
        android:text="远程销毁数据：#*wipedata*#"
        android:drawableLeft="@android:drawable/star_big_on"
       />
    <TextView 
        style="@style/text_content_style"
        android:text="远程数据保护：#*lockscream*#"
        android:drawableLeft="@android:drawable/star_big_on"
       />
</LinearLayout>
